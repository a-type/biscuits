{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "dist/**", "src/client/**"]
		},
		"test": {
			"outputs": [],
			"inputs": ["**/*.tsx", "**/*.ts", "**/*.test.tsx", "**/*.test.ts"]
		},
		"tsc": {
			"outputs": [],
			"inputs": ["**/*.tsx", "**/*.ts", "tsconfig.json", "tsconfig.*.json"]
		},
		"dev": {
			"cache": false
		},
		"lint": {
			"inputs": ["**/*.tsx", "**/*.ts"],
			"outputs": []
		}
	}
}
