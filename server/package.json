{
  "name": "@biscuits/server",
  "scripts": {
    "dev:server": "env-cmd tsx watch --clear-screen=false --conditions=development ./src/server.ts",
    "dev:stripe": "stripe listen -f http://localhost:6124/stripe/webhook",
    "dev": "run-p dev:*",
    "start": "node --conditions=production ./dist/server.js",
    "start:local": "env-cmd pnpm start",
    "build": "tsc --build tsconfig.json",
    "vapid": "node ./scripts/generateVapidKeys.js",
    "migrate": "dotenv biscuits-migrate",
    "typecheck": "tsc --noEmit",
    "write-schema": "env-cmd tsx watch --conditions=development ./scripts/writeSchema.ts"
  },
  "type": "module",
  "private": true,
  "dependencies": {
    "@a-type/auth": "^0.4.3",
    "@a-type/utils": "^1.0.5",
    "@biscuits/apps": "workspace:*",
    "@biscuits/db": "workspace:*",
    "@biscuits/error": "workspace:*",
    "@biscuits/libraries": "workspace:*",
    "@pothos/core": "^3.41.0",
    "@pothos/plugin-dataloader": "^3.17.2",
    "@pothos/plugin-relay": "^3.46.0",
    "@pothos/plugin-scope-auth": "^3.21.1",
    "@trpc/server": "^10.44.1",
    "@verdant-web/common": "^2.2.0",
    "@verdant-web/s3-file-storage": "^1.0.14",
    "@verdant-web/server": "^2.1.2",
    "@whatwg-node/server": "^0.9.22",
    "better-sqlite3": "^9.1.1",
    "cookie": "^0.6.0",
    "dataloader": "^2.2.2",
    "googleapis": "^128.0.0",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-yoga": "^5.1.1",
    "itty-router": "^4.0.25",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.26.3",
    "stripe": "^14.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/body-parser": "^1.19.5",
    "@types/cookie": "^0.5.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "20.11.19",
    "@types/web-push": "^3.6.3",
    "dotenv-cli": "^7.3.0",
    "env-cmd": "^10.1.0",
    "npm-run-all2": "6.1.2",
    "tsx": "^4.6.2",
    "web-push": "^3.6.6"
  }
}
