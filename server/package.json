{
	"name": "@biscuits/server",
	"scripts": {
		"dev:server": "env-cmd tsx watch --clear-screen=false --conditions=development ./src/server.ts",
		"dev:stripe": "stripe listen -f http://localhost:6124/stripe/webhook",
		"dev": "run-p dev:*",
		"start": "node --conditions=production ./dist/server.js",
		"start:local": "env-cmd pnpm start",
		"start:local:timed": "node ./scripts/printTime.mjs && env-cmd pnpm start",
		"build": "tsc --build tsconfig.json",
		"vapid": "node ./scripts/generateVapidKeys.js",
		"migrate": "dotenv biscuits-migrate",
		"typecheck": "tsc --noEmit",
		"write-schema": "env-cmd tsx watch --conditions=development ./scripts/writeSchema.ts",
		"test": "vitest",
		"// these are here to make them easier to reference from the workspace": "",
		"create-app": "cd .. && pnpm run create-app",
		"create-migration": "cd .. && pnpm run create-migration"
	},
	"type": "module",
	"private": true,
	"dependencies": {
		"@a-type/auth": "catalog:",
		"@a-type/auth-email-nodemailer": "^2.0.9",
		"@a-type/utils": "1.1.4",
		"@aws-sdk/client-cloudfront": "^3.583.0",
		"@aws-sdk/client-s3": "3.583.0",
		"@biscuits/apps": "workspace:*",
		"@biscuits/db": "workspace:*",
		"@biscuits/error": "workspace:*",
		"@biscuits/libraries": "workspace:*",
		"@gnocchi.biscuits/hub": "workspace:*",
		"@gnocchi.biscuits/scanning": "workspace:*",
		"@googlemaps/google-maps-services-js": "^3.3.42",
		"@graphql-yoga/plugin-csrf-prevention": "^3.6.3",
		"@hono/node-server": "^1.13.7",
		"@hono/zod-validator": "^0.4.2",
		"@paralleldrive/cuid2": "2.2.2",
		"@pothos/core": "^3.41.0",
		"@pothos/plugin-dataloader": "^3.17.2",
		"@pothos/plugin-relay": "^3.46.0",
		"@pothos/plugin-scope-auth": "^3.21.1",
		"@verdant-web/s3-file-storage": "catalog:",
		"@verdant-web/server": "catalog:",
		"@wish-wash.biscuits/hub": "workspace:*",
		"@wish-wash.biscuits/scanning": "workspace:*",
		"@wish-wash.biscuits/verdant": "workspace:*",
		"change-case": "5.4.4",
		"cookie": "^0.6.0",
		"dataloader": "^2.2.2",
		"date-fns": "^3.6.0",
		"date-fns-tz": "^3.0.1",
		"googleapis": "^128.0.0",
		"graphql": "^16.8.1",
		"graphql-scalars": "^1.22.4",
		"graphql-yoga": "^5.1.1",
		"hono": "^4.6.14",
		"jsonwebtoken": "^9.0.2",
		"kill-port-process": "^3.2.1",
		"kysely": "^0.26.3",
		"rate-limiter-flexible": "^5.0.3",
		"stripe": "^14.5.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.5",
		"@types/cookie": "^0.5.4",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/node": "22.10.2",
		"@types/web-push": "^3.6.3",
		"@whatwg-node/fetch": "^0.10.1",
		"@whatwg-node/server": "^0.9.63",
		"dotenv-cli": "^7.3.0",
		"env-cmd": "^10.1.0",
		"npm-run-all2": "6.1.2",
		"tsx": "^4.6.2",
