{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"plugins": [
			{
				"name": "gql.tada/ts-plugin",
				"schema": "http://localhost:6124/graphql",
				"tadaOutputLocation": "./src/graphql-env.d.ts",
				"tadaTurboLocation": "./src/graphql-cache.d.ts"
			}
		],
		"composite": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.mts", "./typings"],
	"references": [
		{
			"path": "../apps"
		},
		{
			"path": "../error"
		},
		{
			"path": "../libraries"
		}
	]
}
