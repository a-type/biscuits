		"@a-type/kysely": "^1.1.1",
		"@a-type/utils": "catalog:",
		"@biscuits/apps": "workspace:*",
		"@biscuits/error": "workspace:*",
		"@biscuits/libraries": "workspace:*",
		"@gnocchi.biscuits/hub": "workspace:*",
		"@gnocchi.biscuits/scanning": "workspace:*",
		"@googlemaps/google-maps-services-js": "^3.4.2",
		"@graphql-yoga/plugin-csrf-prevention": "^3.16.0",
		"@hono-rate-limiter/cloudflare": "^0.2.2",
		"@hono/zod-validator": "^0.7.3",
		"@paralleldrive/cuid2": "2.2.2",
		"@post.biscuits/hub": "workspace:*",
		"@pothos/core": "^3.41.0",
		"@pothos/plugin-dataloader": "^3.17.2",
		"@pothos/plugin-relay": "^3.46.0",
		"@pothos/plugin-scope-auth": "^3.21.1",
		"@verdant-web/cloudflare": "catalog:",
