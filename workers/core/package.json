{
	"name": "@worker.biscuits/core",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wrangler dev --local --port 6124 ./src/index.ts",
		"stripe": "stripe listen -f http://localhost:6124/stripe/webhook",
		"build": "pnpm run build:assets && pnpm run build:src",
		"build:src": "wrangler build",
		"build:assets": "tsx ./scripts/copyHubAssets.mts",
		"publish": "wrangler publish",
		"types": "wrangler types",
		"vapid": "node ./scripts/generateVapidKeys.js",
		"typecheck": "tsc --noEmit",
		"write-schema": "env-cmd tsx watch --conditions=development ./scripts/writeSchema.ts",
		"test": "vitest",
		"migrate:create": "wrangler d1 migrations create prod-biscuits-core",
		"migrate:apply": "wrangler d1 migrations apply prod-biscuits-core --local",
		"migrate:apply:remote": "wrangler d1 migrations apply prod-biscuits-core --remote",
		"migrate:list": "wrangler d1 migrations list prod-biscuits-core --local",
		"sql": "wrangler d1 execute prod-biscuits-core --local --file",
		"sql:remote": "wrangler d1 execute prod-biscuits-core --remote --file",
		"wrangler": "wrangler"
	},
	"dependencies": {
		"@a-type/auth": "catalog:",
