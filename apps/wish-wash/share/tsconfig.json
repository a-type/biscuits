{
	"extends": "../../../tsconfig.json",
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"isolatedModules": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"outDir": "dist"
	},
	"references": [
		{
			"path": "../../../packages/graphql"
		},
		{
			"path": "../common"
		}
	]
}
